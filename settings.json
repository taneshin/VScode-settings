{
    "workbench.colorTheme": "Monokai",
    "python.formatting.provider": "black",
    "latex-workshop.view.pdf.viewer": "tab",
    "python.linting.pylintEnabled": true,
    "python.linting.enabled": true,
    "python.terminal.activateEnvironment": false,
    "python.pythonPath": "/Users/eshin/.pyenv/shims/python",

    "latex-workshop.latex.recipes": [
        {
            "name": "latexmk",
            "tools": ["cd_to_cwd", "latexmk"]
        },
        {
            "name": "xelatex",
            "tools": ["cd_to_cwd", "xelatex"]
        },
        {
            "name": "pdflatex",
            "tools": ["cd_to_cwd", "pdflatex"]
        },
        {
            "name": "pdflatex -> biber -> pdflatex*2",
            "tools": [
                "cd_to_cwd",
                "pdflatex",
                "biber",
                "pdflatex",
                "pdflatex"
            ]
        },
        {
            "name": "pdflatex -> bibtex -> pdflatex*2",
            "tools": [
                "cd_to_cwd",
                "pdflatex",
                "bibtex",
                "pdflatex",
                "pdflatex"
            ]
        },
        {
            "name": "xelatex -> biber -> xelatex*2",
            "tools": [
                "cd_to_cwd",
                "xelatex",
                "biber",
                "xelatex",
                "xelatex"
            ]
        },
        {
            "name": "xelatex -> bibtex -> xelatex*2",
            "tools": [
                "cd_to_cwd",
                "xelatex",
                "bibtex",
                "xelatex",
                "xelatex"
            ]
        },
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "cd_to_cwd",
            "command": "cd",
            "args": [
                "%DIR%"
            ]
        },
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "%DOCFILE%"
            ]
        },
        {
            "name": "xelatex",
            "command": "xelatex",
            "args": [
                "-xelatex",
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "%DOCFILE%"
            ]
        },
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ]
        },
        {
            "name": "bibtex",
            "command": "bibtex",
            "args": [
                "%DOCFILE%"
            ]
        },
        {
            "name": "biber",
            "command": "biber",
            "args": [
                "%DOCFILE%"
            ]
        }
    ],
    "editor.minimap.enabled": false,
    "editor.wordWrap": "on",
    "workbench.startupEditor": "newUntitledFile",
    "git.path": "/usr/bin/git",
    "code-runner.runInTerminal": true,
    "latex-workshop.message.update.show": false,
    "git.confirmSync": false,
    "cSpell.language": "en-GB,en",
    "cSpell.enableFiletypes": [
        "!python"
    ],
    "cSpell.userWords": [
        "Factiva",
        "SCMP",
        "globalised",
        "metaphorised"
    ],
}
